<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">MoGYSD Data Sharing & Privacy Protocols</MudText>
        <MudDivider Class="my-2" />

        <MudText Typo="Typo.body1">
            <strong>1. Confidentiality:</strong> All user data must be handled with strict confidentiality.<br />
            <strong>2. Consent:</strong> Data must not be shared without the user's explicit consent.<br />
            <strong>3. Purpose Limitation:</strong> Data should only be used for purposes explicitly communicated.<br />
            <strong>4. Security:</strong> All data must be stored securely with access controls.<br />
            <strong>5. Compliance:</strong> Adhere to national data protection regulations and MoGYSD internal guidelines.
        </MudText>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="() => Dialog.Close()">Close</MudButton>
    </DialogActions>
</MudDialog>

@code{
    [CascadingParameter]
    private IMudDialogInstance Dialog { get; set; }
}